# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/storyforge

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=dolphin-mistral:7b

# Writer models per content mode
# Unrestricted: abliterated/uncensored model — Dark Champion 8X3B MoE (11GB), fallback: dolphin-mistral:7b (4GB)
WRITER_MODEL_UNRESTRICTED=dfebrero/DavidAU-Llama-3.2-8X3B-MOE-Dark-Champion-Instruct-uncensored-abliterated-18.4B:latest
# Safe: aligned model with safety guardrails — Gemma 3 27B QAT (18GB), fallback: hermes3:8b (5GB)
WRITER_MODEL_SAFE=gemma3:27b-it-qat

# MoA (Mixture of Agents) — Planner/Writer split
# phi4 plans structured beats; the writer model expands them into prose
PLANNER_MODEL=phi4:latest
MOA_ENABLED=true
PLANNER_KEEP_ALIVE=24h
WRITER_KEEP_ALIVE=24h

# ComfyUI
COMFYUI_HOST=http://localhost:8188

# Illustration (IP-Adapter scene images)
# IP-Adapter applies character/location reference images to scene illustrations
IPADAPTER_ENABLED=true
IPADAPTER_WEIGHT=0.7
SCENE_IMAGE_WIDTH=1024
SCENE_IMAGE_HEIGHT=576

# Application
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Paths
STATIC_DIR=/path/to/storyforge/static
EXPORT_DIR=/path/to/storyforge/exports
WORKFLOW_DIR=/path/to/storyforge/workflows
