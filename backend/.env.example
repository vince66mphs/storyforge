# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/storyforge

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=dolphin-mistral:7b

# Writer models per content mode
# Unrestricted: abliterated/uncensored model (e.g., Dark Champion, dolphin-mistral)
WRITER_MODEL_UNRESTRICTED=dolphin-mistral:7b
# Safe: aligned model with safety guardrails (e.g., Gemma 3 27B QAT, Hermes 3)
WRITER_MODEL_SAFE=hermes3:8b

# ComfyUI
COMFYUI_HOST=http://localhost:8188

# Application
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Paths
STATIC_DIR=/path/to/storyforge/static
EXPORT_DIR=/path/to/storyforge/exports
WORKFLOW_DIR=/path/to/storyforge/workflows
